mixin storeCard(store = {})
  .store
    .store__hero
      .store__actions
        if user && store.author.equals(user._id)
          .store__action.store__action--edit
            a(href=`/stores/${store._id}/edit`)
              //- Use the .icon function from helpers to inject an SVG icon from filesystem
              != h.icon('pencil')
      img(src=`/uploads/${store.photo || 'store.png'}`)
      h2.title
        a(href=`/store/${store.slug}`)= store.name
    .store__details
      //- Use split/slice/join to truncate. Use concat to add in an ellipsis for flair
      p= h.truncate(store.description)
